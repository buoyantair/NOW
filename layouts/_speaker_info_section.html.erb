<section id="speakerinfo" class="feature">
  <div class="row" data-bottom="transform:translateY(-10em)" data--100-bottom="transform:translateY(0em)">
    <h3>Get To Know The Speakers Better!</h3>
  </div>

  <div class="timings">
    <% @item[:speaker] && @item[:speaker].each_with_index do |speaker, i| %>
      <div class="row">
        <div class="large-2 columns time" id="speaker-<%= i %>"
             data-bottom="transform:rotateX(90deg) scale(0);opacity:0"
             data--200-bottom="transform:rotateX(0) scale(1);opacity:1">
          <% if speaker[:image] %>
            <img class="spkimage" src="img/speaker/<%= speaker[:image] %>" alt="<%= speaker[:speaker] %>"/>
          <% end %>
        </div>

        <div class="large-10 columns summary" data-anchor-target="#speaker-<%= i %>"
             data-bottom="transform:rotateX(90deg) scale(0);opacity:0"
             data--200-bottom="transform:rotateX(0) scale(1);opacity:1">
          <% if speaker[:name] %>
            <p>
              <h5>
                  <%= speaker[:name] %>
                <% end %>
              </h5>
            </p>
          <% if speaker[:description] %>
            <p class="speaker_description">
              <small class="speaker_description"> <%= speaker[:description] %></small>
            </p>
          <% end %>
        </div>
      </div>
  </div>
  </div>
    <% end %>
</section>
